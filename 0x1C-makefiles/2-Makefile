# The compiler school uses
CC = gcc
# The .c files
SRC = holberton.c main.c
# The .o files
OBJ = ${SRC:.c=.o}
# The name of the executable
NAME = holberton
# The all rule builds the executable
all: 	${OBJ}
	${CC} ${OBJ} -o ${NAME}
# Recompiles only if the file has changed
holberton:	holberton.o main.o
	${CC} holberton.o $@
main.o:	main.c
	${CC} -c main.c

holberton.o: holberton.c
	${CC} -c holberton.c
